<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/journal_list_textView_Description"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_action_action_help" />
 
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/journal_list_textView_Description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_action_action_help" />

    <TextView
        android:id="@+id/journal_list_textView_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/journal_list_textView_Description"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imageView1"
        android:paddingRight="5dp"
        android:text=" 12:00:00"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/journal_list_textView_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/journal_list_textView_Description"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/journal_list_textView_Time"
        android:paddingLeft="5dp"
        android:text="01.14 "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/journal_list_textView_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/journal_list_textView_Date"
        android:layout_toRightOf="@+id/imageView2"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/journal_list_textView_Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/journal_list_textView_Name"
        android:layout_toRightOf="@+id/imageView2"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
